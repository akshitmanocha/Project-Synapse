# Environment Configuration Template for Project Synapse
# Copy this file to .env and fill in your actual values

# Required: Google Gemini API Key for LLM integration
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Optional: Alternative LLM provider (currently not used but available for future extension)
# GROQ_API_KEY=your_groq_api_key_here

# Development Settings (optional)
# Set to 'true' to enable debug logging
DEBUG=false

# Agent Configuration (optional)
# Maximum number of reasoning steps before termination (default: 15)
MAX_AGENT_STEPS=15

# Maximum number of reflection cycles per problem (default: 3)
MAX_REFLECTIONS=3

# LLM timeout in seconds (default: 30)
LLM_TIMEOUT=30